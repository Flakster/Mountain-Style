<main class="article-container">
  <div class="text-content">
    <h1 class="article-title" >
      <%= @article.title %>
    </h1>
    <article class= "body-content">
      <%= @article.body %>
    </article>
    <span class="article-info">
      <%= @article.author.name %> - <%= @article.created_at.strftime("%B %-d, %Y")%>
    </span>
    <%= link_to 'Edit', edit_article_path(@article) %> Vote this article
    <%= link_to 'Vote', article_votes_path(@article), method: :post %>
  </div>
  <div class="image-content">
    <img class="article-image" src="<%= image_path @article.image %>" alt="article image" >
  </div>
</main>